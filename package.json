{
  "name": "electron-boilerplate",
  "description": "An important description",
  "version": "0.1.0",
  "author": {
    "email": "something@gmail.com",
    "name": "Ben Brown",
    "url": "https://example.com"
  },
  "build": {
    "appId": "com.something.electron.boilerplate",
    "productName": "Electron Boilerplate",
    "extraMetadata": {
      "main": "build/electron/my-electron.js"
    }
  },
  "main": "public/electron/my-electron.js",
  "private": true,
  "homepage": "./",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start:react": "cross-env BROWSER=none rescripts start",
    "start:electron": "wait-on http://localhost:3000 && electron .",
    "start": "concurrently -k \"yarn buildwatch:electron\" \"yarn start:react\" \"yarn start:electron\"",
    "build": "yarn build:electron && rescripts build",
    "test": "rescripts test",
    "dist": "yarn dist:cleanup && yarn build && electron-builder",
    "build:electron": "tsc -p src-electron/",
    "buildwatch:electron": "tsc -p src-electron/ --watch",
    "build:cleanup": "rm -fr build/ public/electron",
    "dist:cleanup": "rm -fr dist/ && yarn build:cleanup"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "electron-is-dev": "^1.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.0",
    "typescript": "~3.7.2",
    "@rescripts/cli": "^0.0.13",
    "@rescripts/rescript-env": "^0.0.11",
    "concurrently": "^5.0.0",
    "cross-env": "^6.0.3",
    "electron": "^7.1.3",
    "electron-builder": "^21.2.0",
    "wait-on": "^3.3.0"
  }
}
